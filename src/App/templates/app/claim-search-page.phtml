                <div class="column-one-fifth">
                    <p style="text-align: right">
                        <?php if ($claimSummaryPage->getPage() < $claimSummaryPage->getPageCount()) { ?>
                            <a href="<?= $this->generateUrl('claim.search', [], ['page' => $claimSummaryPage->getPage()+1]) ?>">Next page</a>
                        <?php } ?>
                    </p>
                </div>
            </div>
        <?php } ?>

    </div>
</div>
